@page
@using PawFund.Pages
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Welcome to PawFund</h1>
<p>Find your new furry friend and support animal shelters!</p>

<div class="row">
    <div class="col-md-6">
        <h2>Available Pets</h2>
        @foreach (var pet in Model.AvailablePets)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@pet.Name</h5>
                    <p class="card-text">@pet.Species - @pet.Breed</p>
                    <a asp-page="/Pets/Details" asp-route-id="@pet.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        }
    </div>
    <div class="col-md-6">
        <h2>Upcoming Events</h2>
        @foreach (var evt in Model.UpcomingEvents)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@evt.Title</h5>
                    <p class="card-text">@evt.Date.ToShortDateString() - @evt.Location</p>
                    <a asp-page="/Events/Details" asp-route-id="@evt.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        }
    </div>
</div>
